extends layout

block content
    .w3-card-4
      header.w3-container.w3-teal
        h3.w3-left Students List (DAW2020)
      if list.length > 0
        .w3-container 
          table.w3-table-all
            tr 
              th Number
              th Name
              th Git
            each s in list
              tr
                td= s.numero
                td= s.nome
                td 
                  a(href=s.git)=s.git
                td
                  button.w3-button.w3-teal(onclick="window.location.assign('/students/" + s.numero + "')") Info
                td 
                  button.w3-button.w3-teal(onclick="window.location.assign('/students/edit/" + s.numero + "')") Edit
                td 
                  button.w3-button.w3-teal(onclick="window.location.assign('/students/delete/" + s.numero + "')") Delete 
          p 
            button.w3-button.w3-teal(onclick="window.location.assign('/students/register')") Register Student              
      else
        .w3-container
          p No Students Available
      footer.w3-container.w3-teal
        address Gerado por dawApp :: 2020-Nov, Joao Amorim
        

  
