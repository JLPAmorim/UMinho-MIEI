extends layout

block content
    .w3-card-4
      header.w3-container.w3-teal
        h3.w3-left Register Student

      .w3-container
            form(action = "/students", method = "POST")
                p Number:         
                    input.w3-input.w3-border.w3-section.w3-light-grey(type="text" name="numero" placeholder="Number" required="required")
                p Name:    
                    input.w3-input.w3-border.w3-section.w3-light-grey(type="text" name="nome" placeholder="Name" required="required")
                p Github:
                    input.w3-input.w3-border.w3-section.w3-light-grey(type="text" name="git" placeholder="Number" required="required")
                p TPCs:

                table
                    td 1    
                        input.custom-control-input(type="checkbox", id=`tpc1`, name=`tpc1`)   
                    td 2   
                        input.custom-control-input(type="checkbox", id=`tpc2`, name=`tpc2`)     
                    td 3   
                        input.custom-control-input(type="checkbox", id=`tpc3`, name=`tpc3`)        
                    td 4      
                        input.custom-control-input(type="checkbox", id=`tpc4`, name=`tpc4`)         
                    td 5    
                        input.custom-control-input(type="checkbox", id=`tpc5`, name=`tpc5`)      
                    td 6   
                        input.custom-control-input(type="checkbox", id=`tpc6`, name=`tpc6`) 
                    td 7   
                        input.custom-control-input(type="checkbox", id=`tpc7`, name=`tpc7`)           
                    td 8   
                        input.custom-control-input(type="checkbox", id=`tpc8`, name=`tpc8`)  
                br
                input.w3-button.w3-teal(value='Register', type='submit')
                br


      footer.w3-container.w3-teal
        address Gerado por dawApp :: 2020-Nov, Joao Amorim
        p
            a(href="/students") Back to Main Page